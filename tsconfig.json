{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./src/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "node16",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "allowJs": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "node_modules", "dist"
    ]
}