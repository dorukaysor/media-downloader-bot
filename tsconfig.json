{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "commonJs",
        "moduleResolution": "node",
        "target": "es6",
        "allowJs": true,
        "moduleInterop": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": ["node_modules", "dist"]
}
